@model Product
@{
    ViewData["Title"] = Model.Name;
}

<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center mb-5">
            <div class="col-md-6">
                <img class="card-img-top mb-5 mb-md-0 product-image" src="/Images/@Model.Image" alt="@Model.Name">
            </div>
            <div class="col-md-6">
                <div class="product-details">
                    <div class="sku">SKU: BST-498</div>
                    <h1 class="product-name">@Model.Name</h1>
                    <div class="price">
                        <span class="discounted-price">@Model.Price</span>
                        <span class="original-price text-decoration-line-through ms-2">@Model.Price - 10</span>
                    </div>
                    <p class="stock-info">Stokta Kalan Son @Model.Stock Ürün!</p>
                    <form asp-controller="Cart" asp-action="AddToCart" class="add-to-cart-form d-flex align-items-center">
                        <input type="hidden" name="productId" value="@Model.Id" />
                        <input class="form-control text-center me-3 quantity-input" id="inputQuantity" type="number" name="quantity" value="1" min="1" style="max-width: 5rem">
                        <button class="btn btn-success btn-lg" type="submit">
                            <i class="bi-cart-fill me-1"></i>
                            Sepete Ekle
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <h2 class="section-title">Ürün Açıklaması</h2>
                <p class="lead product-description">
                    @Model.Description
                </p>
            </div>
        </div>
    </div>
</section>

<style>
    /* Resmin üzerine gelindiğinde büyüme efekti */
    .product-image {
        transition: transform 0.3s ease;
        border-radius: 10px;
        overflow: hidden;
    }

        .product-image:hover {
            transform: scale(1.05);
        }

    /* Ürün detayları stil */
    .product-details {
        padding-left: 20px;
    }

    .sku {
        font-size: 14px;
        color: #6c757d;
        margin-bottom: 10px;
    }

    .product-name {
        font-size: 36px;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
    }

    .price {
        margin-bottom: 20px;
    }

    .discounted-price {
        font-size: 30px;
        font-weight: bold;
        color: #28a745;
    }

    .original-price {
        font-size: 20px;
        color: #6c757d;
        text-decoration: line-through;
    }

    .stock-info {
        font-size: 18px;
        color: #dc3545;
        margin-bottom: 20px;
    }

    .add-to-cart-form {
        margin-bottom: 30px;
    }

    .quantity-input {
        max-width: 100px;
        font-size: 18px;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ced4da;
    }

    .btn-success {
        font-size: 18px;
        padding: 10px 30px;
        border-radius: 5px;
        background-color: #28a745;
        border: 1px solid #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    .section-title {
        font-size: 28px;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
    }

    .product-description {
        font-size: 20px;
        color: #555;
    }
</style>
